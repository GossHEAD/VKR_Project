<Page x:Class="VRK_WPF.MVVM.View.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:VRK_WPF.MVVM.View"
      mc:Ignorable="d"
      Title="О программе">
    <Grid>
    <StackPanel Margin="20">
        <TextBlock Text="О программе" FontSize="20" FontWeight="Bold" />
        <Separator />
        <TextBlock Text="Программный комплекс для обучения распределению производственных данных по узлам промышленной вычислительной сети в нештатной ситуации." TextWrapping="Wrap" Margin="0,10,0,0"/>
        <TextBlock Text="Версия: 1.0.0" FontWeight="Bold" Margin="0,5,0,0" />
        <TextBlock Text="Разработчик: [Название компании / ФИО разработчика]" Margin="0,5,0,0" />
    </StackPanel>
    </Grid>
</Page>
