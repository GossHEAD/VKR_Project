<Page x:Class="VRK_WPF.MVVM.View.DocumentationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:VRK_WPF.MVVM.View"
      mc:Ignorable="d"
      Title="DocumentationPage" Height="450" Width="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <TextBlock Text="Документация" FontSize="20" FontWeight="Bold" />
                <Separator />
                <TextBlock Text="Здесь представлено руководство пользователя и описание функциональности системы." TextWrapping="Wrap" Margin="0,10,0,0"/>
                <TextBlock Text="1. Запуск системы и авторизация." FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBlock Text="2. Основные функции и интерфейс пользователя." FontWeight="Bold" Margin="0,5,0,0"/>
                <TextBlock Text="3. Имитация нештатных ситуаций и анализ узлов." FontWeight="Bold" Margin="0,5,0,0"/>
                <TextBlock Text="4. Экспорт и импорт данных." FontWeight="Bold" Margin="0,5,0,0"/>
                <TextBlock Text="Подробное руководство см. в полной документации." Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
