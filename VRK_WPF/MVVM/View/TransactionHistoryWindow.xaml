<Window x:Class="VRK_WPF.MVVM.View.TransactionHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История транзакций" Height="400" Width="600">
    <Grid>
        <DataGrid Name="TransactionGrid" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding Transactions}" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Транзакции" Binding="{Binding TransactionId}" />
                <DataGridTextColumn Header="Отправитель" Binding="{Binding Sender}" />
                <DataGridTextColumn Header="Получатель" Binding="{Binding Receiver}" />
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" />
                <DataGridTextColumn Header="Время" Binding="{Binding Timestamp}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>