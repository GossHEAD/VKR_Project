<Window x:Class="VRK_WPF.MVVM.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:VRK_WPF.MVVM.View"
        xmlns:converters="clr-namespace:VRK_WPF.MVVM.Converters"
        mc:Ignorable="d"
        Title="Авторизация" Height="330" Width="450" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="40">
            <!-- Header -->
            <TextBlock Text="Система распределенного хранения данных" 
                       HorizontalAlignment="Center" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="Вход в систему" 
                       HorizontalAlignment="Center" 
                       FontSize="14" 
                       Margin="0,0,0,20"/>
            <Separator Margin="0,0,0,20"/>
            
            <!-- Login Form -->
            <TextBlock Text="Имя пользователя:" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                     Padding="5" 
                     Margin="0,0,0,15">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                </TextBox.InputBindings>
            </TextBox>
            
            <!-- Error Message -->
            <TextBlock Foreground="Red" 
                       Visibility="{Binding IsErrorVisible, Converter={StaticResource BoolToVisibilityConverter}}" 
                       Text="{Binding ErrorMessage}" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>
            
            <!-- Help Text -->
            <TextBlock Text="Доступные пользователи: admin, specialist" 
                       HorizontalAlignment="Center"
                       FontStyle="Italic"
                       Margin="0,0,0,15"
                       Foreground="Gray"/>
            
            <!-- Buttons -->
            <Button Content="Войти" 
                    Command="{Binding LoginCommand}" 
                    Padding="20,8" 
                    HorizontalAlignment="Center" 
                    IsDefault="True"/>
            
        </StackPanel>
    </Grid>
</Window>