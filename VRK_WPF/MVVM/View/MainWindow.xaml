<Window x:Class="VRK_WPF.MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:VRK_WPF.MVVM.ViewModel"
        Title="Система распределенного хранения данных" Height="600" Width="900">
    <Grid>
        <!-- Главное меню -->
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Загрузить данные" />
                <MenuItem Header="Экспортировать данные" />
                <Separator />
                <MenuItem Header="Выход" />
            </MenuItem>
            <MenuItem Header="Узлы">
                <MenuItem Header="Добавить узел" />
                <MenuItem Header="Просмотреть список узлов" />
            </MenuItem>
            <MenuItem Header="Транзакции">
                <MenuItem Header="Просмотреть историю" Click="ViewTransactionHistory_Click" />
                <MenuItem Header="Анализ производительности" />
            </MenuItem>
            <MenuItem Header="Настройки">
                <MenuItem Header="Настройки узла" Click="OpenNodeSettings_Click" />
            </MenuItem>
            
        </Menu>

        <!-- Основная панель -->
        <Grid Margin="0,30,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!-- Общая статистика -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Margin="10" Padding="10" BorderBrush="Gray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Активные узлы:" FontWeight="Bold" />
                        <TextBlock Text="5" FontSize="20" Foreground="Green" />
                    </StackPanel>
                </Border>
                <Border Margin="10" Padding="10" BorderBrush="Gray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Успешные транзакции:" FontWeight="Bold" />
                        <TextBlock Text="2" FontSize="20" Foreground="Blue" />
                    </StackPanel>
                </Border>
                <Border Margin="10" Padding="10" BorderBrush="Gray" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Ошибки:" FontWeight="Bold" />
                        <TextBlock Text="3" FontSize="20" Foreground="Red" />
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Список узлов -->
            <GroupBox Grid.Row="1" Header="Список узлов" Margin="10">
                <DataGrid Name="NodeListGrid" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding NodeList}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Узла" Binding="{Binding Id}" />
                        <DataGridTextColumn Header="IP Адрес" Binding="{Binding Address}" />
                        <DataGridTextColumn Header="Статус" Binding="{Binding Status}" />
                        <DataGridTextColumn Header="Порт" Binding="{Binding Port}" />
                        <DataGridTextColumn Header="ЦП" Binding="{Binding CpuLoad}" />
                        <DataGridTextColumn Header="RAM" Binding="{Binding MemoryUsage}" />
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Прогресс и уведомления -->
            <StackPanel Grid.Row="2" Margin="10">
                <TextBlock Text="Прогресс текущей транзакции:" FontWeight="Bold" />
                <ProgressBar Height="20" IsIndeterminate="True" Margin="0,5" />
                <TextBlock Text="Последнее уведомление: Узел Node1 успешно отправил данные." FontStyle="Italic" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
