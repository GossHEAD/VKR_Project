<Window x:Class="VRK_WPF.MVVM.View.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VRK_WPF.MVVM.View"
        xmlns:converters="clr-namespace:VRK_WPF.MVVM.Converters"
        xmlns:viewModel="clr-namespace:VRK_WPF.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="Административная панель"
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style x:Key="SubHeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#3F51B5" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Административная панель" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           VerticalAlignment="Center"/>
                
                <TextBlock Text="{Binding SelectedNodeName}" 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="20,0,0,0" 
                           VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="{Binding CurrentUserInfo}" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           Margin="0,0,15,0"/>
                
                <Button Content="Выход" 
                        Command="{Binding LogoutCommand}" 
                        Padding="10,3" 
                        Background="#FF5252" 
                        Foreground="White" 
                        BorderThickness="0"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Navigation Panel -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="0,0,1,0">
                <StackPanel>
                    <!-- Node Selection -->
                    <Border Background="#EEEEEE" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Выбор узла" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            
                            <ComboBox ItemsSource="{Binding AvailableNodes}" 
                                      SelectedItem="{Binding SelectedNode}" 
                                      DisplayMemberPath="NodeId" 
                                      Margin="0,0,0,5"/>
                            
                            <Button Content="Подключиться" 
                                    Command="{Binding ConnectToNodeCommand}" 
                                    Margin="0,5,0,0" 
                                    HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Border>

                    <!-- Navigation Menu -->
                    <ListBox x:Name="NavMenu" 
                             BorderThickness="0" 
                             Background="Transparent" 
                             SelectedIndex="0"
                             SelectionChanged="NavMenu_SelectionChanged">
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Статус узлов" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗄️" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Управление БД" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Управление конфигурациями" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📝" FontSize="16" Margin="0,0,10,0"/>
                                <TextBlock Text="Журналы событий" VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" 
                    Background="White" 
                    Padding="15">
                <Frame x:Name="AdminContentFrame" 
                       NavigationUIVisibility="Hidden"/>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#EEEEEE">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="100" 
                             Height="12" 
                             IsIndeterminate="{Binding IsProcessing}" 
                             Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>